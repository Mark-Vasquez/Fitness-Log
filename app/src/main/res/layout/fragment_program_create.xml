<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".program.ui.program_create.ProgramCreateFragment">

    <TextView
        android:id="@+id/btnProgramCreateCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CancelButton"
        app:layout_constraintTop_toTopOf="@+id/tvProgramCreateTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvProgramCreateTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvProgramCreateTitle"
        style="@style/FragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_program"
        tools:text="Create Program"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnProgramCreateSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SaveButton"
        app:layout_constraintTop_toTopOf="@+id/tvProgramCreateTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvProgramCreateTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilProgramName"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/program_name"
        app:layout_constraintTop_toBottomOf="@id/tvProgramCreateTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:maxLength="50" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/btnScheduleSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:divider="@drawable/outline_fitness_center_24"
        app:layout_constraintStart_toStartOf="@id/tilProgramName"
        app:layout_constraintTop_toBottomOf="@+id/tilProgramName"
        app:layout_constraintEnd_toEndOf="@id/tilProgramName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:text="@string/schedule" />

        <TextView
            android:id="@+id/scheduledDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"
            android:text="Mo/Tu/We/Th/Fr/Sa/Su" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvTimerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/timer"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        app:layout_constraintStart_toStartOf="@id/btnScheduleSelect"
        app:layout_constraintTop_toBottomOf="@+id/btnScheduleSelect" />
</androidx.constraintlayout.widget.ConstraintLayout>